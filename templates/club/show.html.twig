{% extends 'base.html.twig' %}

{% block title %}Club{% endblock %}

{% block body %}
    <h1>Club</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ club.id }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ club.Nom }}</td>
            </tr>
            <tr>
                <th>Logo</th>
                <td><img src ="{{ asset('uploads/images/' ~ club.image)}}" width="35px" height="35px"></img></td>
            </tr>
            <tr>
                <th>DateCreation</th>
                <td>{{ club.DateCreation ? club.DateCreation|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>DateDebutSaison</th>
                <td>{{ club.DateDebutSaison ? club.DateDebutSaison|date('Y-m-d') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('club_index') }}">back to list</a>

    <a href="{{ path('club_edit', {'id': club.id}) }}">edit</a>

    {{ include('club/_delete_form.html.twig') }}
{% endblock %}
