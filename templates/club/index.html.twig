{% extends 'base.html.twig' %}

{% block title %}Club index{% endblock %}

{% block body %}
    <h1>Club index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Logo</th>
                <th>DateCreation</th>
                <th>DateDebutSaison</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for club in clubs %}
            <tr>
                <td>{{ club.id }}</td>
                <td>{{ club.Nom }}</td>
                <td><img src ="{{ asset('uploads/images/' ~ club.image)}}" width="35px" height="35px"></img></td>
                <td>{{ club.DateCreation ? club.DateCreation|date('Y-m-d') : '' }}</td>
                <td>{{ club.DateDebutSaison ? club.DateDebutSaison|date('Y-m-d') : '' }}</td>
                <td>
                    <a href="{{ path('club_show', {'id': club.id}) }}">show</a>
                    <a href="{{ path('club_edit', {'id': club.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('club_new') }}">Create new</a>
{% endblock %}
