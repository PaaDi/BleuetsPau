{% extends 'base.html.twig' %}

{% block title %}Bleuets de Pau | Club de Football du 64{% endblock %}

{% block body %}
    <div class="top-container" style="margin-top: 200px; text-align: center; color: #3498db">
        <h1>Bienvenue sur l'application des Bleuets de Pau</h1>
    </div>
    <div class="profile">
        <form class="px-4 py-3" method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">DÃ©connexion</a>
                </div>
            {% endif %}
            <div class="form-group">
                <input placeholder="Adresse e-mail" type="text"  name="username" id="inputUsername" class="form-control" required autofocus>
            </div>
            <div class="form-group">
                <input placeholder="Mot de passe" type="password" name="password" id="inputPassword" class="form-control" required>
            </div>
            <input type="hidden" name="_csrf_token"
                   value="{{ csrf_token('authenticate') }}"
            >

            {#
            Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
            See https://symfony.com/doc/current/security/remember_me.html

            <div class="checkbox mb-3">
                <label>
                    <input type="checkbox" name="_remember_me"> Remember me
                </label>
            </div>
            #}

            <button class="btn btn-lg btn-primary" type="submit">
                Se connecter
            </button>
        </form>

