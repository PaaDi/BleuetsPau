{% extends 'base.html.twig' %}

{% block title %}Equipe index{% endblock %}

{% block body %}
    <h1>Equipe index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nom</th>
                <th>Ville</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for equipe in equipes %}
            <tr>
                <td>{{ equipe.id }}</td>
                <td>{{ equipe.Nom }}</td>
                <td>{{ equipe.Ville }}</td>
                <td><img src ="{{ asset('uploads/images/' ~ equipe.image)}}" width="35px" height="35px"></img></td>
                <td>
                    <a href="{{ path('equipe_show', {'id': equipe.id}) }}">show</a>
                    <a href="{{ path('equipe_edit', {'id': equipe.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('equipe_new') }}">Create new</a>
{% endblock %}
